---
import { getCollection } from "astro:content";
import Search from "./Search";

const posts = await getCollection("posts", ({ data }) => !data.isDraft).then(
  (posts) =>
    posts.map(({ id, data: { title, description } }) => ({
      id,
      title,
      description,
    }))
);
---

{
  /* Put this component anywhere you like to have searchbar.
  <SearchBox/>
For example look at the search.astro page */
}
<Search posts={posts} client:load />
